{
  "name": "@aplr/tailwind-components",
  "version": "1.0.1",
  "sideEffects": false,
  "keywords": [
    "react",
    "css-in-js",
    "styled-components",
    "css",
    "tailwindcss",
    "tailwind",
    "tailwindcss-plugin",
    "tailwind-css",
    "tailwindcss-ui"
  ],
  "description": "Create tailwind css react components like styled components with classes name on multiple lines",
  "author": "Andreas Pfurtscheller <andreas@fruits.co>",
  "homepage": "https://github.com/aplr/tailwind-components",
  "bugs": {
    "url": "https://github.com/aplr/tailwind-components/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aplr/tailwind-components.git",
    "directory": "packages/tailwind-components"
  },
  "main": "./dist/tailwind-components.cjs.js",
  "module": "./dist/tailwind-components.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:app": "tsc && vite build",
    "prebuild": "npm run clean",
    "postbuild": "npm run test",
    "clean": "rimraf dist",
    "pretest": "jest --clearCache",
    "test": "run-s test:*",
    "test:unit": "jest --passWithNoTests",
    "prepublishOnly": "npm run build && cp ../../README.md ."
  },
  "dependencies": {
    "tailwind-merge": "^1.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^28.1.4",
    "@types/node": "^17.0.8",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitejs/plugin-react": "^2.1.0",
    "esbuild": "^0.14.11",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.0.0",
    "jest-environment-jsdom": "^28.1.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^1.5.0"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  }
}
